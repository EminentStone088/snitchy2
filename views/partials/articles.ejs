<div class="articles">
	<% for (const article of
			articles
		) { %>
		<a href="/article/<%- article.slug %>">
			<% if (article.thumbnail) { %>
			<img src="<%- article.thumbnail %>" alt="Thumbnail - <%- article.thumbnail %>" loading="lazy">
			<% } %>
			<h3><%- article.title %></h3>
			<span><%- article.authors %></span>
		</a>
	<% } %>
</div>
